# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
max_line_length = 140

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.java]
indent_size = 4

